#include <stdio.h>

void main(){

    float x, y;

    printf("Inputkan nilai x: ");
    scanf("%d", &x);

    printf("Inputkan nilai y: ");
    scanf("%d", &y);

    printf("Hasil x + y: %.2f\n", x + y);
    printf("Hasil x - y: %.2f\n", x - y);
    printf("Hasil x * y: %.2f\n", x * y);
    printf("Hasil x / y: %.2f\n", x / y);

}
